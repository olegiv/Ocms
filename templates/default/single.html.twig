<!DOCTYPE html>
<html lang="en">
	<head>

		{{ renderController('\\Ocms\\core\\app\\meta\\controller\\MetaController::getGlobalHtml', '') | raw }}

		{% if titleHead -%}
		<title>{{ titleHead }}</title>
		<meta property="og:title" content="{{ titleHead }}">
		<meta name="twitter:title" content="{{ titleHead }}" />
		{%- endif %}

		{% if keywords -%}
		<meta name="keywords" content="{{ keywords }}"/>
		{%- endif %}

		{% if description -%}
		<meta name="description" content="{{ description }}">
		<meta property="og:description" content="{{ description }}" />
		<meta name="twitter:description" content="{{ description }}">
		{%- endif %}

		{% if ogImage -%}
		<meta property="og:image" content="{{ ogImage }}">
		{%- endif %}

		{% if twitterImage -%}
		<meta name="twitter:image" content="">
		<meta name="twitter:card" content="summary_large_image">
		{%- endif %}

		{% if ogUrl -%}
		<meta property="og:image" content="{{ ogUrl }}">
		{%- endif %}

		{% if twitterSite -%}
		<meta property="og:image" content="{{ twitterSite }}">
		{%- endif %}

		{% if twitterCreator -%}
		<meta property="og:image" content="{{ twitterCreator }}">
		{%- endif %}

		<!-- StyleSheets -->
		<link href="{{template_root}}css/default.css" rel="stylesheet" type="text/css">

		<!-- Javascripts -->
		<script src="{{template_root}}js/default.js"></script>

		{{ renderController('\\Ocms\\core\\app\\analytics\\controller\\AnalyticsController::getTrackerHtmlCode', '') | raw }}

	</head>

	<body>

		{% set sidebar_id = 'top' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		{{ menu | raw }}

		<div id="content">
			{% block content %}
				<h1 class="node-title">{{ title }}</h1>
				{{ body | raw }}
			{% endblock %}
		</div>

		{% set sidebar_id = 'left' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		{% set sidebar_id = 'right' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		{% set sidebar_id = 'middle' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		{% set sidebar_id = 'bottom' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		<div id="footer">
			<footer>
				<!-- Copyright -->
				<p>
					&copy; Copyright {{ "now"|date("Y") }} by <a href="{{site.copyright.url}}" target="_blank">{{site.copyright.label}}</a>.
				</p>
				<!-- End of Copyright -->
			</footer>
		</div>

	</body>
</html>
