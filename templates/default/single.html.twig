<!DOCTYPE html>
<html>
	<head>

		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="Generator" content="OCMS 0 (https://ocms.tech)">
		<meta name="MobileOptimized" content="width">
		<meta name="HandheldFriendly" content="true">
		<meta charset="UTF-8">

		{% if titleHead -%}
		<title>{{ titleHead }}</title>
		<meta property="og:title" content="{{ titleHead }}">
		<meta name="twitter:title" content="{{ titleHead }}" />
		{%- endif %}

		{% if keywords -%}
		<meta name="keywords" content="{{ keywords }}"/>
		{%- endif %}

		{% if description -%}
		<meta name="description" content="{{ description }}">
		<meta property="og:description" content="{{ description }}" />
		<meta name="twitter:description" content="{{ description }}">
		{%- endif %}

		{% if ogImage -%}
		<meta property="og:image" content="{{ ogImage }}">
		{%- endif %}

		{% if twitterImage -%}
		<meta name="twitter:image" content="">
		<meta name="twitter:card" content="summary_large_image">
		{%- endif %}

		{% if ogUrl -%}
		<meta property="og:image" content="{{ ogUrl }}">
		{%- endif %}

		{% if twitterSite -%}
		<meta property="og:image" content="{{ twitterSite }}">
		{%- endif %}

		{% if twitterCreator -%}
		<meta property="og:image" content="{{ twitterCreator }}">
		{%- endif %}

		<!-- Favicon  -->
		<link rel="icon" type="image/png" href="{{template_root}}img/favicons/favicon-16x16.png" sizes="16x16">
		<link rel="icon" type="image/png" href="{{template_root}}img/favicons/favicon-32x32.png" sizes="32x32">
		<link rel="icon" type="image/png" href="{{template_root}}img/favicons/favicon-96x96.png" sizes="96x96">
		<link rel="apple-touch-icon" sizes="57x57" href="{{template_root}}img/favicons/apple-touch-icon-57x57.png">
		<link rel="apple-touch-icon" sizes="60x60" href="{{template_root}}img/favicons/apple-touch-icon-60x60.png">
		<link rel="apple-touch-icon" sizes="72x72" href="{{template_root}}img/favicons/apple-touch-icon-72x72.png">
		<link rel="apple-touch-icon" sizes="76x76" href="{{template_root}}img/favicons/apple-touch-icon-76x76.png">
		<link rel="apple-touch-icon" sizes="114x114" href="{{template_root}}img/favicons/apple-touch-icon-114x114.png">
		<link rel="apple-touch-icon" sizes="120x120" href="{{template_root}}img/favicons/apple-touch-icon-120x120.png">
		<link rel="apple-touch-icon" sizes="144x144" href="{{template_root}}img/favicons/apple-touch-icon-144x144.png">
		<link rel="apple-touch-icon" sizes="152x152" href="{{template_root}}img/favicons/apple-touch-icon-152x152.png">
		<link rel="apple-touch-icon" sizes="180x180" href="{{template_root}}img/favicons/apple-touch-icon-180x180.png">

		<!-- StyleSheets -->
		<link href="{{template_root}}css/default.css" rel="stylesheet" type="text/css">

		<!-- Javascripts -->
		<script src="{{template_root}}js/default.js"></script>

		{% if analytics -%}
			{{analytics | raw}}
		{%- endif %}

	</head>

	<body>

		{% set sidebar_id = 'top' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		{{ menu | raw }}

		<div id="content">
			{% block content %}
				<h1 class="node-title">{{ title }}</h1>
				{{ body | raw }}
			{% endblock %}
		</div>

		{% set sidebar_id = 'left' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		{% set sidebar_id = 'right' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		{% set sidebar_id = 'middle' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		{% set sidebar_id = 'bottom' %}
		{% for block in blocks %}
			{% if block.id2_sidebar == sidebar_id %}
				<div class="block">
					<h3 class="title">{{ block.title }}</h3>
					<div class="body">{{ block.body | raw }}</div>
				</div>
			{% endif %}
		{% endfor %}

		<div id="footer">
			<footer>
				<!-- Copyright -->
				<p>
					&copy; Copyright {{ "now"|date("Y") }} by <a href="{{site.copyright.url}}" target="_blank">{{site.copyright.label}}</a>.
				</p>
				<!-- End of Copyright -->
			</footer>
		</div>

	</body>
</html>
